{
	"compilerOptions": {
		"target": "ES2021",
		"baseUrl": ".",
		"paths": {
			"~*": ["./*"]
		},
		"module": "commonjs",
		// "module": "ES2020",
		"allowJs": false,
		"jsx": "react-jsx",
		"isolatedModules": true,
		"strict": true,
		// "exactOptionalPropertyTypes": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["wicg-file-system-access", "css-font-loading-module"]
	},
	"include": ["src/**/*"]
}
